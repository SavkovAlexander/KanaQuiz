    <style name="CherryBlossomTree" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/cherryPrimaryColor</item>
        <item name="colorPrimaryDark">@color/cherryPrimaryDarkColor</item>
        <item name="colorAccent">@color/cherrySecondaryColor</item>
        <item name="android:navigationBarColor">@color/cherryPrimaryDarkColor</item>
        <item name="android:colorBackground">@color/cherryTertiaryLightColor</item>
        <item name="android:colorForeground">@color/grey_900</item>
        <item name="fontFamily">serif</item>
        <item name="android:typeface">serif</item>
