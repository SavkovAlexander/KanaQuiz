    </style>

    <style name="ChrysanthemumTwilight" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/chrysanthPrimaryColor</item>
        <item name="colorPrimaryDark">@color/chrysanthPrimaryDarkColor</item>
        <item name="colorAccent">@color/chrysanthSecondaryColor</item>
